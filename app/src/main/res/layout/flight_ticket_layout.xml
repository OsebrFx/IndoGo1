<?xml version="1.0" encoding="utf-8"?>
<!-- Le ScrollView permet de faire dÃ©filer tout le contenu verticalement si la hauteur dÃ©passe lâ€™Ã©cran -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F4FD1">

    <!-- Layout principal contenant tout le contenu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barre supÃ©rieure avec bouton de retour -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp">

            <!-- Bouton retour (flÃ¨che) -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@android:color/white" />
        </RelativeLayout>

        <!-- Nom/logo de la compagnie aÃ©rienne -->
        <TextView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="IndiGo"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold"
            android:contentDescription="IndiGo Logo" />

        <!-- Carte contenant toutes les informations du billet -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <!-- Conteneur interne de la carte -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Date du vol -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="20 December 2022"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- SECTION : Trajet de vol (dÃ©part - durÃ©e - arrivÃ©e) -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <!-- Bloc dÃ©part (ville + aÃ©roport) -->
                    <LinearLayout
                        android:id="@+id/layoutDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <!-- Code aÃ©roport (ex: DEL) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEL"
                            android:textColor="#000000"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <!-- Nom complet de lâ€™aÃ©roport -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Delhi International Airport"
                            android:textColor="#666666"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <!-- Informations de vol (durÃ©e + icÃ´ne avion + ligne) -->
                    <LinearLayout
                        android:id="@+id/layoutFlightInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Ligne + icÃ´ne avion -->
                        <LinearLayout
                            android:id="@+id/flightIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <!-- Ligne gauche -->
                            <View
                                android:layout_width="30dp"
                                android:layout_height="2dp"
                                android:background="@drawable/dashed_line_yellow" />

                            <!-- IcÃ´ne avion -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœˆ"
                                android:textColor="#FFA726"
                                android:textSize="24sp" />

                            <!-- Ligne droite -->
                            <View
                                android:layout_width="30dp"
                                android:layout_height="2dp"
                                android:background="@drawable/dashed_line_yellow" />
                        </LinearLayout>

                        <!-- DurÃ©e du vol -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="04h 30m"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Bloc arrivÃ©e (ville + aÃ©roport) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:gravity="end">

                        <!-- Code aÃ©roport arrivÃ©e -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLR"
                            android:textColor="#000000"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <!-- Nom complet de lâ€™aÃ©roport arrivÃ©e -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Bengaluru Airport India"
                            android:textColor="#666666"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- SECTION : Informations sur les passagers et repas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <!-- Nombre de passagers -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- IcÃ´ne utilisateur -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <!-- DÃ©tail nombre passagers -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Adult"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Option repas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- IcÃ´ne repas -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ´"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <!-- Texte repas -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- SECTION : Informations passager / vol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Nom passager -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passenger Name"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shreya Kumar"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Type de vol -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flight Type"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Economy"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Code du vol -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flight Code"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IG-2105"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- SECTION : DÃ©tails embarquement -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <!-- Heure dâ€™embarquement -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Boarding Time"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:text="08:15 AM"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Porte dâ€™embarquement -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Gate"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:text="A5"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Terminal -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Terminal"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:text="T2"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- NumÃ©ro de siÃ¨ge -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Seat Number"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:text="A5"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ligne sÃ©paratrice -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#DDDDDD" />

                <!-- Code-barres du billet -->
                <ImageView
                    android:id="@+id/ivBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Barcode"
                    android:scaleType="fitCenter"
                    android:src="@drawable/barcode_sample" />

                <!-- NumÃ©ro de billet sous le code-barres -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:letterSpacing="0.1"
                    android:text="1 2 5 8 4 6 2 4 2 7 5 3 1 3 5 0 6 7 5 9"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <!-- Titre section conditions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Terms &amp; Condition"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- Texte des conditions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="2dp"
                    android:text="Curabitur ultrices nisl ac vulputate lacinia. Donec pharetra tincidunt velit, sed iaculis est sollicitudin ac."
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <!-- Bouton pour tÃ©lÃ©charger le ticket -->
                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_bg"
                    android:text="Download E-Ticket"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
