<?xml version="1.0" encoding="utf-8"?>
<!-- Fichier XML : carte affichant les dÃ©tails dâ€™un vol -->

<!-- CardView : conteneur principal avec coins arrondis et ombre -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/purple_500"
    app:strokeWidth="2dp">

    <!-- Conteneur vertical principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ligne 1 : Logo + Nom compagnie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Logo compagnie aÃ©rienne -->
            <ImageView
                android:id="@+id/ivAirlineLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Airline Logo"
                android:src="@drawable/ic_airline_placeholder" />

            <!-- Nom compagnie aÃ©rienne -->
            <TextView
                android:id="@+id/tvAirlineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Indigo"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Ligne 2 : DÃ©tails du vol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Colonne 1 : DÃ©part -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Code aÃ©roport dÃ©part -->
                <TextView
                    android:id="@+id/tvDepartureCodeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Heure de dÃ©part -->
                <TextView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="06:30"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Colonne 2 : DurÃ©e -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFlightDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04h 15m"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Colonne 3 : ArrivÃ©e -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvArrivalCodeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLR"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10:45"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Section Prix -->
            <LinearLayout
                android:id="@+id/priceSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽŸ"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="7,319"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Badge "Free Meal" -->
        <TextView
            android:id="@+id/tvFreeMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/badge_background"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="Free Meal"
            android:textColor="#9E9E9E"
            android:textSize="11sp" />

        <!-- Section code promotionnel -->
        <TextView
            android:id="@+id/tvPromoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/promo_background"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Use Code : Flyaway60 and get 60% instant cashback"
            android:textColor="#4CAF50"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
